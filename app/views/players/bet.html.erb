<h3>Make a bet for this round.</h3>
<%= form_tag("/play") do %>
  <% if !params[:name].nil? %>
    <% session[:name] = params[:name] %>
  <% end %>
  <%= label_tag(:wager, "#{session[:name]} has $#{session[:budget]}.") %><br/><br/>
  <%= text_field_tag(:wager) %><br/><br/>
  <%= submit_tag("Make Bet") %>
<% end %>
